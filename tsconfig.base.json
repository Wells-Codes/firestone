{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@core/*": ["./core/*"],
			"@firestone/shared/data-access/api-runner": ["libs/shared/data-access/api-runner/src/index.ts"],
			"@firestone/shared/feature/overwolf": ["libs/shared/feature/overwolf/src/index.ts"],
			"@firestone/shared/data-access/storage": ["libs/shared/data-access/storage/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
